{
  "extends": ["airbnb-base"],
  "plugins": ["prettier"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
      "sourceType": "module"
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "modules": true,
    "spread": true,
    "globalReturn": true
  },
  "rules": {
    "no-console": "off",
    "max-classes-per-file": "off",
    "no-bitwise": "off",
    "no-param-reassign": "off",
    "consistent-return": "off",
    "import/extensions": "off",
    "comma-dangle": "off",
    "no-plusplus": "off",
    "radix": "off",
    "no-tabs": "off",
    "no-use-before-define": "off",
    "no-mixed-spaces-and-tabs": "off",
    "implicit-arrow-linebreak": "off",
    "function-paren-newline": "off",
    "class-methods-use-this": "off",
    "operator-linebreak": "off",
    "import/prefer-default-export": "off",
    "max-len": "off",
    "func-names": "off",
    "object-curly-newline": "off",
    "prettier/prettier": [
      "error",
      { "singleQuote": true, "tabWidth": 2, "semi": true, "trailingComma": "es5", "printWidth": 80, "useTabs": true }
    ],
    "indent": "off"
  },
  "globals": {
    "Module": "readonly",
    "dat": "readonly",
    "Stats": "readonly",
    "ccallArrays": "readonly"
  }
}
